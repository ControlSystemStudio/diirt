<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.diirt.ui.tools.*?>

<VBox prefHeight="373.0" prefWidth="413.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.diirt.ui.tools.ProbeController">
   <children>
      <GridPane hgap="5.0" vgap="5.0" VBox.vgrow="NEVER">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Channel:" />
            <TextField fx:id="channelField" onAction="#onChannelChanged" GridPane.columnIndex="1" />
            <TextField fx:id="valueField" editable="false" focusTraversable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Value:" GridPane.rowIndex="1" />
            <Label text="New value:" GridPane.rowIndex="2" />
            <TextField fx:id="newValueField" disable="true" editable="false" onAction="#onNewValueChanged" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
         <VBox.margin>
            <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
         </VBox.margin>
      </GridPane>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <Tab text="Untitled Tab 1">
               <content>
                  <ValueViewer fx:id="valueViewer" prefHeight="200.0" prefWidth="200.0" />
               </content>
          </Tab>
          <Tab text="Untitled Tab 2">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>
